{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/robbert229/devcontainer-features/operator-sdk:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/audacioustux/devcontainers/k9s:1": {}
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}\\.kube,target=/home/codespace/.kube,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "docker.docker",
        "Tim-Koehler.helm-intellisense",
        "tooltitudeteam.tooltitude",
        "VisualStudioExptTeam.vscodeintellicode"
      ]
    }
  }
}
